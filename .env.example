# Git repository configuration
PIPELINE_REPO_URL=https://github.com/yourusername/substation-pipeline.git
PIPELINE_BRANCH=main

# Use alternative Overpass endpoints that are usually less loaded
OVERPASS_URLS=https://overpass.kumi.systems/api/interpreter,https://overpass.private.coffee/api/interpreter,https://overpass.openstreetmap.ru/api/interpreter

# Timeout for individual Overpass requests (in seconds)
REQUEST_TIMEOUT_SEC=60

# Maximum total time to spend trying to fetch OSM data before giving up (in seconds)
# After this time, pipeline continues with buffer-based snapshots
OSM_FETCH_MAX_TIME=300  # 5 minutes max

# Optional: Do not save overlay and mask images
PIPELINE_NO_IMAGES=true